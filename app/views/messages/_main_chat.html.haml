.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      %h1.chat-main__group-info__left-box__current-group
        = @group.name
      %ul.chat-main__group-info__left-box__member-list
        Member:
        %li
          - @group.users.each do |user|
            = user.name
    = link_to "#", class: "chat-main__group-info__right-box" do
      .chat-main__group-info__right-box__edit-btn    
        Edit
  .chat-main__message-list
    - @messages.each do |msg|
      .chat-main__message-list__message
        .chat-main__message-list__message__upper-box
          %p.chat-main__message-list__message__upper-box__talker
            = msg.user.name
          %p.chat-main__message-list__message__upper-box__datetime
            = msg.created_at
        .chat-main__message-list__message__text
          = msg.text
    
  .chat-main__message-form
    = form_for [@group, @message], html:{ class: "chat-main__message-form__form" } do |form|
      .chat-main__message-form__form__input-box
        = form.text_field :text, class: "chat-main__message-form__form__input-box__text", placeholder: "type a message" 
        = form.label :image, class: "chat-main__message-form__form__input-box__image" do
          = icon('fas', 'image')
          = form.file_field :image, class: "chat-main__message-form__form__input-box__file-input"
      = form.submit "Send", class: "chat-main__message-form__form__submit"